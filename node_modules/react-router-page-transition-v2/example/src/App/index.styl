@require '../styles/responsive';
@require '../styles/main';

.App
  display block
  max-width desktop-max-width
  margin 0 auto

.transition-wrapper
  position relative
  z-index 1

  .transition-item
    position absolute
    top 0
    right 0
    left 0
    transition transform 0.5s
    +for_breakpoint(desktop)
      max-width desktop-max-width
      margin 0 auto

    &.transition-appear.transition-appear-active
      transform translate3d(0, 0, 0) 
      
    &.transition-leave
      transform translate3d(0, 0, 0) 

.transition-active
  height 100vh
  +for_breakpoint(desktop)
    overflow hidden
    max-width desktop-max-width
    margin 0 auto

.transition-slide-left
  .transition-item
    &.transition-appear
      transform translate3d(100%, 0, 0) 

    &.transition-leave.transition-leave-active
      transform translate3d(-100%, 0, 0) 

.transition-slide-right
  .transition-item
    &.transition-appear
      transform translate3d(-100%, 0, 0) 

    &.transition-leave.transition-leave-active
      transform translate3d(100%, 0, 0) 
